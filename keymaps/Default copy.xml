<keymap version="1" name="Default copy" parent="$default">
  <action id="CommentByLineComment">
    <keyboard-shortcut first-keystroke="ctrl slash" />
    <keyboard-shortcut first-keystroke="ctrl divide" />
    <keyboard-shortcut first-keystroke="slash" />
  </action>
  <action id="CopyPaths">
    <keyboard-shortcut first-keystroke="shift ctrl alt c" />
  </action>
  <action id="CopyReference">
    <keyboard-shortcut first-keystroke="shift ctrl c" />
  </action>
  <action id="EditorIndentSelection">
    <keyboard-shortcut first-keystroke="tab" />
    <keyboard-shortcut first-keystroke="back_slash" />
  </action>
</keymap>